}

/* Form component animations */
.component-enter {
  opacity: 0;
  transform: translateY(-10px);
}

.component-enter-active {
  opacity: 1;
  transform: translateY(0);
  transition: opacity 300ms, transform 300ms;
}

.component-exit {
  opacity: 1;
}

.component-exit-active {
  opacity: 0;
  transform: translateY(-10px);
  transition: opacity 300ms, transform 300ms;
}

