    display: flex;
    align-items: center;
    gap: var(--space-2, 8px);
    min-width: max-content;
  }
  
  .header--form-builder .header__brand {
    display: none; /* Hide brand on mobile form builder */
  }
  
  .header--form-builder .header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-1, 4px);
    flex: 1;
  }
  
  .header--form-builder .header__divider {
    width: 1px;
    height: 20px;
    background: var(--color-gray-300, #d1d5db);
    margin: 0 var(--space-1, 4px);
  }
  
  .header--form-builder .header__back-btn {
    background: var(--color-blue-500, #3b82f6);
    color: white;
    border: none;
    flex-shrink: 0;
  }
  
  .header--form-builder .header__action-btn {
    min-width: 44px;
    height: 36px;
    padding: 0 var(--space-2, 8px);
    border-radius: var(--radius-md, 8px);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-1, 4px);
    flex-shrink: 0;
  }
  
  .header--form-builder .btn__text {
    display: none; /* Hide text on mobile, show only icons */
  }
  
  .header--form-builder .btn__icon {
    font-size: var(--text-base, 16px);
  }
  
  /* Show text for primary actions */
  .header--form-builder .btn--primary .btn__text {
    display: inline;
    font-size: var(--text-xs, 12px);
  }
}

